<main>
<section>
  <h2><%= @product.name %></h2>
    <p>Description: <%= @product.description.capitalize %></p>
    <p>Price: $<%= @product.price %></p>
    <p>Stock: <%= @product.stock %> units</p>
    <p>Available: <%= @product.available %></p>
    <p>User_id: <%= @product.user_id %></p>
    <img src= <%= @product.photo_url %>>
    
  <section>
    <a class="btn" <%= link_to "Back to main page", root_path %></a>
    <a class="btn" <%= link_to "Edit", edit_product_path(@product), method: :get %></a> 
    <a class="btn" <%= link_to "Create", new_product_path(@product), method: :get %></a>
    <a class="btn" <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure?"} %></a>
  </section>
</section>
</main>

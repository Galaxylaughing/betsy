<main>
  <h2><%=action_name%> Product</h2>
  
  <section>
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <label>Category</label>
      <select class="form-control" name="product[category]"><option value="annual">annual</option>
      <option value="specialty">specialty</option>
      <option value="flower">flower</option></select>
    </div>

    <div class="form-group">
      <label>Name</label>
      <%=f.text_field :name, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Merchant Id</label>
      <%=f.text_field :user_id, class:"form-control"%>
    </div>

    <div class="form-group">
      <labe>Price</labe></label>
      <%=f.text_field :price, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Stock</label>
      <%=f.text_field :stock, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Photo URL</label>
      <%=f.text_field :photo_url, class:"form-control"%>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%=f.text_field :description, class:"form-control"%>
    </div>

    <div class="form-group">
      <%= f.submit "#{action_name}", class:"btn btn-primary" %>
    </div>
    <%end%>
  
  </section>
</main>

<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a84a561c8e.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="app_header">
      <!-- <img src='https://lh3.googleusercontent.com/ozqDFFoNBgyNr_FNVVZFP9zH2K6iKsBcw1waZgVdAwGg3PelWXoNv1qChiviBAVuvIBgn9E17M7535YsqqTbJkHH3Axf3oN3K4x_6m4xNIc4oneHRAossp6YLrkF3WkRkVNgZzUojg=w2400' /> -->
      <h1 class="app_header__title">
        Plantsy
      </h1>
      <nav class="top_nav">
        <div class="btn-group page_nav">
          <%= link_to "Products", root_path, class: "btn btn-primary" %>
          <%= link_to "Categories", root_path, class: "btn btn-primary" %>
          <%= link_to "Merchants", root_path, class: "btn btn-primary" %>
        </div>
        <div class="user_nav">
          <% current_user = User.find_by(id: session[:user_id]) %>
          <% if current_user %>
            <a href=<%= user_path(current_user.id) %> class="btn btn-light"><i class="fab fa-github"></i>  Logged in as <%= current_user.username %></a>
            <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-light" %>
          <% else %>
            <a href=<%= github_login_path %> class="btn btn-light"><i class="fab fa-github"></i>  Login with Github</a>
          <% end %>
          <a href=<%= root_path %> class="btn btn-light shopping-cart"><i class="fas fa-shopping-cart"></i></a>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
